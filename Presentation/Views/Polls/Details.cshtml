@model Domain.Models.Poll

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>@Model.Title</h2>
        </div>
    </div>
    <form asp-action="Vote" method="post">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="OptionSelected" id="option1" value="1" required>
                    <label class="form-check-label" for="option1">
                        @Model.Option1Text (<span>@Model.Option1VotesCount</span> votes)
                    </label>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="OptionSelected" id="option2" value="2">
                    <label class="form-check-label" for="option2">
                        @Model.Option2Text (<span>@Model.Option2VotesCount</span> votes)
                    </label>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="OptionSelected" id="option3" value="3">
                    <label class="form-check-label" for="option3">
                        @Model.Option3Text (<span>@Model.Option3VotesCount</span> votes)
                    </label>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block">Vote</button>
            </div>
        </div>
    </form>
</div>
