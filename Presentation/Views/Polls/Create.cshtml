@model Presentation.Models.PollCreateViewModel
@{
    ViewData["Title"] = "Create Poll";
}

<div class="container mt-4">
    <h2>Create a New Poll</h2>
    <!-- Form posts to PollController's Create action (adjust as needed) -->
    @using (Html.BeginForm("Create", "Polls", FormMethod.Post, new { @class = "row g-3" }))
    {
        <div class="col-md-12">
            <label asp-for="@Model.Poll.Title" class="form-label">Title</label>
            <input asp-for="@Model.Poll.Title" class="form-control" />
            <span asp-validation-for="@Model.Poll.Title" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="@Model.Poll.Option1Text" class="form-label">Option 1</label>
            <input asp-for="@Model.Poll.Option1Text" class="form-control" />
            <span asp-validation-for="@Model.Poll.Option1Text" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="@Model.Poll.Option2Text" class="form-label">Option 2</label>
            <input asp-for="@Model.Poll.Option2Text" class="form-control" />
            <span asp-validation-for="@Model.Poll.Option2Text" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="@Model.Poll.Option3Text" class="form-label">Option 3</label>
            <input asp-for="@Model.Poll.Option3Text" class="form-control" />
            <span asp-validation-for="@Model.Poll.Option3Text" class="text-danger"></span>
        </div>

        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">Create Poll</button>
        </div>
    }
</div>
